generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int     @id @default(autoincrement())
  salt String @unique
  QRCodeHash String @unique
  name  String
  company String
  email String 
  phone String  
  signedIn Boolean
  signedInAt DateTime?
  skills Skill[]
}

model Skill {
  skill String 
  rating Int
  user User @relation(fields: [userId], references: [id])
  userId Int
  @@unique([skill, userId])
}
